<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.zohotest.loginsignup.LoginSignup.LoginSignupActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/Layout_Zoho_Main"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Login"
                android:padding="10dp"
                android:id="@+id/Textview_Zoho_Login"
                android:background="@color/colorPrimary"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:gravity="center"
            android:text="SignUp"
            android:id="@+id/Textview_Zoho_Signup"
            android:background="@color/white"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/Layout_Zoho_Login"
        android:layout_below="@+id/Layout_Zoho_Main"
        android:orientation="vertical">

        <EditText
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:background="@drawable/edittextbg"
                android:id="@+id/EditText_Zoho_Email"
                android:textSize="14sp"
                android:hint="Email"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/edittextbg"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:id="@+id/EditText_Zoho_Password"
            android:textSize="14sp"
            android:hint="Password"/>

        <Button
            android:id="@+id/Button_Zoho_LoginAction"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Login"
            android:background="@color/colorPrimary"
            />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"
        android:id="@+id/Layout_Zoho_Signup"
        android:layout_below="@+id/Layout_Zoho_Main"
        android:orientation="vertical">

        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/edittextbg"
            android:id="@+id/EditText_Zoho_RegName"
            android:textSize="14sp"
            android:hint="Name"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittextbg"
            android:id="@+id/EditText_Zoho_RegEmail"
            android:textSize="14sp"
            android:hint="Email"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/edittextbg"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:id="@+id/EditText_Zoho_RegPassword"
            android:textSize="14sp"
            android:hint="Password"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/edittextbg"
            android:inputType="number"
            android:maxLength="10"
            android:layout_marginTop="20dp"
            android:id="@+id/EditText_Zoho_RegConatctNumber"
            android:textSize="14sp"
            android:hint="Conatct Number"/>




        <Button
            android:id="@+id/Button_Zoho_RegisterAction"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Create a Account"
            android:background="@color/colorPrimary"
            />

    </LinearLayout>

    </LinearLayout>

</ScrollView>
